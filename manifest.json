{
    "manifest_version": 3,
    "name": "Affirmations Pet!",
    "description": "a google chrome extension that contains a pet that gives you random affirmations when you click on it",
    "version": "1.0",
    "icons": {
        "16": "/images/icon16.png",
        "32":"/images/icon32.png",
        "48": "/images/icon48.png",
        "128": "/images/icon128.png"
    },

    "permissions" : ["storage"], 
 
    "content_scripts": [{
        "matches" : ["https://www.google.com/*"],
        "html" : ["/code/main.html"],
        "css" : ["/code/main.html"],
        "js" : ["/code/main.js"]
    }]
}