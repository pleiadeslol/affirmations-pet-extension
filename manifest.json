{
    "manifest_version": 3,
    "name": "Affirmations Pet!",
    "description": "a google chrome extension that contains a pet that gives you random affirmations from time to time",
    "version": "1.0",
    "icons": {
        "16": "/images/icon16.png",
        "32":"/images/icon32.png",
        "48": "/images/icon48.png",
        "128": "/images/icon128.png"
    },
    "content_scripts": [{
        "matches" : ["https://www.google.com/*"],
        "html" : ["main.html"],
        "css" : ["main.css"],
        "javascript" : ["main.js"]
    }]
}